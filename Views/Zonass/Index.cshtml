<h1>Zonas de cobertura</h1>
<hr />
<div class="row">
    <div class="col-sm-9">
    </div>
    <div class="col-sm-3">
        <a href="@Url.Action("Create", "Zonass")" class="btn btn-success fa fa-plus">
            Configurar zonas
        </a>
    </div>
</div>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Zona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Municipio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Zona)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Municipio)
                </td>
                <td>
                    @if (item.Estado == 1)
                    {
                        <text>
                 
                        Activo
                        </text>
                    }
                    else
                    {
                        <text>
                      
                            Inactivo
                        </text>

                    }
                   
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
